---
import Plus from '@icons/Plus.astro';

interface Props {
  asset: { url: string; alt: string };
  title: string;
}

const { asset, title } = Astro.props;
---

<div class='flex items-center justify-between border-b border-black-700 py-8'>
  <div class='flex items-center gap-8'>
    <img
      src={asset.url}
      alt={asset.alt}
      class='h-10 w-36 rounded-2xl object-cover'
    />
    <h3 class='text-4xl font-semibold tracking-[-1px]'>{title}</h3>
  </div>

  <Plus attributes='size-6' />
</div>
