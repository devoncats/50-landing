---
import Plus from '@icons/Plus.astro';

interface Props {
  asset: { url: string; alt: string };
  title: string;
}

const { asset, title } = Astro.props;
---

<div class='flex items-center justify-between py-8 border-b border-black-700'>
  <div class='flex items-center gap-8'>
    <img
      src={asset.url}
      alt={asset.alt}
      class='w-36 h-10 object-cover rounded-2xl'
    />
    <h3 class='text-4xl font-semibold tracking-[-1px]'>{title}</h3>
  </div>

  <Plus attributes='size-6' />
</div>
